<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:QuizWebApp.ViewModels"
             x:DataType="vm:PlayQuizViewModel"
             x:Class="QuizWebApp.Views.PlayQuizView">
    <UserControl.DataTemplates>
        <DataTemplate DataType="{x:Type vm:PlayTextQuestionViewModel}">
            <Panel>
                <Grid RowDefinitions="Auto Auto">
                    <TextBlock Text="{Binding QuestionText}" />
                    <TextBox Grid.Row="1" Text="{Binding AnswerText, Mode=TwoWay}" />
                </Grid>
            </Panel>
        </DataTemplate>
    </UserControl.DataTemplates>
    <Design.DataContext>
        <vm:PlayQuizViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="Auto * Auto">
        <TextBlock HorizontalAlignment="Center" Text="{Binding Name, Mode=OneTime}" />
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Questions, Mode=OneWay}" />
        <DockPanel Grid.Row="2">
            <Button HorizontalAlignment="Left" Content="Сдать тест" />
            <Button HorizontalAlignment="Right" Content="Отмена" />
        </DockPanel>
    </Grid>
</UserControl>